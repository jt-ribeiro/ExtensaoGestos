{
    "manifest_version": 3,
    "name": "Controle por Gestos",
    "version": "1.0",
    "description": "Controla o navegador com gestos usando TensorFlow.js e MediaPipe.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting",
      "tabs",
      "storage",
      "camera"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "src/service_worker.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content.js"]
      }
    ],
    "action": {
      "default_popup": "src/popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "handtrack.min.js",
          "extensao/mediapipe/*",
          "gesture.js",
          "extensao/mediapipe/hands.js",
          "extensao/mediapipe/camera_utils.js",
          "extensao/mediapipe/hands_solution_wasm_bin.js",
          "extensao/mediapipe/hands_solution_wasm_bin.wasm",
          "mediapipe/hand_landmark_full.tflite"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }